			if( 'undefined' == typeof( $(document).data('idleTimer') ) ){
				if( $.isFunction( $.idleTimer ) ){
					$.idleTimer(30000);
				}else{
					$.getScript("/html5/js/2013/idle-timer.js", useIdleTimer);
					return;
				}
			}
			$(document).on('active.idleTimer', updateSiteActivity );
		}
			if ( $.cookie && $.cookie("activetab")){
				activetab = $.cookie("activetab");
			} else {
				activetab = 1;
			}
			if( (".lineTabs li").length <=1 ) { activetab = 1; }
			if (activetab == 1 ){
				$(".lineTabs li:first a").addClass("activeTab");
				$(".contentTabs article:first").show();
			} else {
				$(".lineTabs li:last a").addClass("activeTab");
				$(".contentTabs article:last").show();
			}

			$(".selectTabs li a").click(function(){
				$(".lineTabs li a").toggleClass("activeTab");
				$(".contentTabs .tab1").toggle();
				$(".contentTabs .tab2").toggle();

				if ($(".contentTabs .tab1").css('display') == 'none'){
					$.cookie("activetab", 2);
					activetab = 2;
				} else {
					$.cookie("activetab", 1);
					activetab = 1;
				}
				
				if (activetab == 1) updateActivity();
				else updateSiteActivity();
				
				var $jsp1 = $("#scroll1").data( 'jsp' ); 
				if( $jsp1 ) $jsp1.reinitialise();
				var $jsp2 = $("#scroll2").data( 'jsp' ); 
				if( $jsp2 ) $jsp2.reinitialise();
				$(".jspContainer").height(500);
			});
			
			$(function() {
				if ($.fn.jScrollPane) {
					$('#scroll1').jScrollPane();
					$('#scroll2').jScrollPane();
				}
			});		
			$('.votActivityItem:last-child').css('border-bottom','none');
			$('.scrollpaneWrapper').hover(
				function() { 
					$(".jspVerticalBar").fadeIn(500);
				},
				function() {
					$(".jspVerticalBar").fadeOut(500);
				}
			);
			useIdleTimer();
		});

		function updateActivity(){
		  if ( true || $('#uactivity_tab1').is(':visible') ) {
			if( 'idle'===$.data(document,'idleTimer') ) return;
			$.get('/activity/getevents/',{lastactivity: $("#uactivity_tab1 div.wrappingtable:first").attr('id')},function(data){
				if (data){
					$("#scroll1 .jspPane").prepend(data);
					$('.newactivity').fadeIn(1000, function(){ $(this).removeClass('newactivity'); });
					 //api.reinitialise();
				}
			});			
		  } // end if
		}

		//window.setInterval(updateActivity, 40000);

		function updateSiteActivity(){ // TODO: when updateActivity must need : make it functional in here
		  //if ( $('#uactivity_tab2').is(':visible') ) {
			if( 'idle'===$.data(document,'idleTimer') ) return;
			var la = $("#uactivity_tab2 div.wrappingtable:first").attr('id');
			// if previous ajax request are already pending - if lastActivity is changed - then abort it, else do nothing: keep those request pending
			if( updateSiteActivity.ajax && updateSiteActivity.ajax.abort ){
				if( updateSiteActivity.la === la ) return;
				updateSiteActivity.ajax.abort
			}
			var ajax = $.get('/activity/getsiteevents/',{lastactivity: la},function(data){
				if (data){
					$("#scroll2 .jspPane").prepend(data);
					$('.newsiteactivity').fadeIn(1000, function(){ 
						$(this).removeClass('newsiteactivity');
						$('#scroll2 .votActivityItem:gt(50)').remove();
						var $jsp2 = $("#scroll2").data( 'jsp' ); 
						if( $jsp2 ) $jsp2.reinitialise();
					});
					 //api.reinitialise();
				}
				updateSiteActivity.ajax = null;
			});
			ajax.always( function(){ updateSiteActivity.ajax = null; });
			updateSiteActivity.ajax = ajax;
			updateSiteActivity.la = la;
		  //} // end if
		}
		window.setInterval(updateSiteActivity, 33000);
		
</script>

            masha: '',
            hashChange: null,
            getHash: function () {
                return this.masha ? this.masha : this.hash;
            },
            setHash: function (value) {
                hash = value;
                if (value && !this.masha) {
                    viewModel.common.sendPost2('/news/masha', {
                        news_id: '5460ef8fc65c16c21cba7eb9',
                        hash: value
                    });
                }
                var a = $('.article__header a');
                a.attr('href', a.attr('href').split('?')[0] + value.replace('#', '?masha='));
            },
            addHashchange: function (value) {
                this.hashChange = value;
            }
        };

        function init_masha() {
            MaSha.instance = new MaSha({
//                'validate': true,
                'location': locObject,
                'enableHaschange': true,
                'onMark': function () {
                    if (locObject.masha) {
                        locObject.masha = null;
                        locObject.hashChange ? locObject.hashChange() : null;
                    }
                },
                'onUnmark': function () {
                    if (locObject.masha) {
                        locObject.masha = null;
                        locObject.hashChange ? locObject.hashChange() : null;
                    }
                }
            });
        }

        if (window.addEventListener) {
            window.addEventListener('load', function () {
                init_masha();
            }, false);
        } else {
            window.attachEvent('onload', function () {
                init_masha();
            });
        }

            </script>

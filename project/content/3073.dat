            <script type="application/javascript">
    $(function () {
        //Подключаем всю необходимую бабуйню, если надо
        jQuery.fancybox || $('<script src="/js/fancybox/jquery.fancybox.pack.js"><\/script>').appendTo('head');
        var $fancyBoxCssLink = $('<link rel="stylesheet" media="screen" type="text/css" href="/js/fancybox/jquery.fancybox.css" />');
        if (!$(document).find($fancyBoxCssLink).length) {
            $fancyBoxCssLink.appendTo('head');
        }
        const MODAL_WINDOW_BUTTON_NAME = 'subscribe-form-modal-window-open';
        const SUCCESS_INFO = 'success';
        const ERROR_INFO = 'error';
        const WAITING_PRELOADER = 'waiting';

        var $modalWindowOpenButton = $('[name="' + MODAL_WINDOW_BUTTON_NAME + '"]');

        var $form = $('#unisender-subscribe-form');
        var $infoBlock = $('#unisender-subscribe-form-info');
        $modalWindowOpenButton.fancybox({
            beforeLoad : function () {
                $infoBlock.removeClass('success error');
                $infoBlock.empty();
                $infoBlock.html('Рассылка о новых материалах в блоге и новых номерах журналов. Отправляется в среднем 1 письмо в 2 недели.').addClass('info');
                $form.find('input[name="email"]').parents('.f-table-row').show();
                $form.find('input[name="name"]').parents('.f-table-row').show();
                $form.find('input:submit').show();
                $form.find('input:reset').show();
                $form.find('input:button[value="ok"]').hide();
            }
        });
        const submitUrl = '/kr/blog/unisender-subscribe/';
        var ajaxSubmitAllowed = true;
        $form.on('submit', function () {
            $infoBlock.empty();
            var email = $form.find('input[name="email"]').val();
            var name = $form.find('input[name="name"]').val();
            if (!email) {
                $infoBlock.info(ERROR_INFO, 'E-mail не введён');
            } else {
                if (ajaxSubmitAllowed) {
                    $.ajax({
                        type: "POST",
                        url: submitUrl,
                        data: {email : email, name : name},
                        beforeSend : function () {
                            ajaxSubmitAllowed = false;
                            $infoBlock.info(WAITING_PRELOADER);
                        },
                        /**
                         * @param response {{
                         *          success:bool
                         *          message:string
                         *      }}
                         */
                        success : function (response) {
                            ajaxSubmitAllowed = true;
                            if (response.success) {
                                $form.find('input[name="email"]').val('').parents('.f-table-row').hide();
                                $form.find('input[name="name"]').val('').parents('.f-table-row').hide();
                                $form.find('input:submit').hide();
                                $form.find('input:reset').hide();
                                $form.find('input:button[value="ok"]').show();
                                $infoBlock.info(SUCCESS_INFO, 'Спасибо' + (name ? ', ' + name : '') + '. На e-mail ' + email + ' отправлено письмо с подтверждением подписки. Проверьте свой почтовый ящик.');
                            } else {
                                $infoBlock.info(ERROR_INFO, response.message);
                            }
                        },
                        error : function (jqXHR, textStatus, errorThrown) {
                            console.log (jqXHR, textStatus, errorThrown);
                        }
                    });
                }
            }
            return false;
        });

        $.prototype.info = function (className, message) {
            this.removeClass();
            this.empty();
            this.addClass('info-message');
            this.addClass(className);
            this.text(message);
        };

    });
</script>


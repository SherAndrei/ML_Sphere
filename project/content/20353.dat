        jQuery(window).resize(function(){
            if (jQuery('.popup').is(':visible')) {
                popupTop();
            }
        });

        function popupTop(popup) {
            $(popup).show();
            if ($(popup).is(':visible')) {
                var height = jQuery(window).height();
                var popupHeight = jQuery(popup+' .popupBody').height();
                var popupTop = (height - popupHeight) / 2;
                var popupLeft = jQuery(popup+' .popupBody').width() / 2;
                if (popupTop <= 0) {
                    jQuery(window).scrollTop(0);
                    popupTop = 20;
                    jQuery(popup+' .popupBody').css('position', 'absolute');
                }
                else {
                    jQuery(popup+' .popupBody').css('position', 'fixed');
                }
                jQuery(popup+' .popupBody').css('top', popupTop).css('margin-left', '-'+popupLeft+'px');
            }
        }

        function popupShow(h1,pAlert,butClass,agree){

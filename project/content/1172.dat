    names += $("#cnt_and").val() ? "И" : "ИЛИ";
    names += "</span> ";
    names += cnt.eq(1).text() + qu + "; ";
  }else{
    cnt.each(function(){
      names += $(this).text() + qu + "; ";
    });
  }
  $("#fo_sel li:has(:checked)").each(function(){
    names += $(this).text() + qu + "; ";
  });

  $("#otr_sel li:has(:checked)").each(function(){
    names += $(this).text() + qu + "; ";
  });
  names += kw_text;

  $("ul:not(#cnt_sel,#otr_sel,#fo_sel) li:has(:checked)").each(function(){
    names += $(this).text() + "; ";
  });


  var pers = $("#pers_name").val();
  if( pers != ""  && pers != "- Нет -"){
    names += pers + "; ";
  }
  if($("#dpbeg").val()!=""){
    names += " c " + $("#dpbeg").val();
  }
  if($("#dpend").val()!=""){
    names += " по " + $("#dpend").val() + "; ";
  }


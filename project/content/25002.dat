						}

						$('.mag_index_item').click(function() {
							var page = $(this).closest('.mag_index_items')
							var this_c = $(this).attr('data-pcolumns');
							var this_i = $('.mag_index_item', page).index($(this));
							var this_all = $('.mag_index_item', page).size()
							var page_c = page.attr('data-columns');
							var this_index = $('.mag_index_items').index(page);
							next_page = this_index;
							current_page = this_index-1;
							start_reading();
							if (current_page < 0) {
								current_page = false;
								list_items('next');
							} else {
								switch_page();
								set_page(page_c,this_c,this_i,this_all)
							}
							switch_index();
							$('.mag_index_item').removeClass('mag_index_item__highlight');
							$(this).addClass('mag_index_item__highlight');
						})

						function set_page(p,c,i,a) {
							current_page = next_page;
							var current_page_block = $('.mag_content_item').eq(current_page)
							var column_constructor = current_page_block.find('.column_constructor')
							var column_width = column_constructor.innerWidth()/column_constructor.attr('data-pcolumns');

							var offset_multiple = i*c;
							var overflow = Math.abs(i*c) + Math.abs(p);
							var all_columns = a*c;
							
							if (overflow > all_columns) {
								offset_multiple = all_columns - p;
							}


							current_page_block.css({"transform": "translate3d(-"+ (offset_multiple*(column_width+columnGap/2)) +"px, 0px, 0px"})
							current_offset = current_page_block.position().left;
							set_page_hash(next_page+1,Math.abs(current_offset)/(column_width+columnGap/2));
							highlight_index(false);
						}
						
						function get_page() {
							var hash = get_page_hash();
							console.log(hash,'hash');
							if (hash == '' || hash == '#') {
								show_cover();
								current_page = false;
								return false;
							} else {
								start_reading();
								var hash_arr = hash.split('_');
								var page = hash_arr[1];
								var page_item = hash_arr[2];
								next_page = page-1;
								current_page = page-1;
								switch_page();
								var current_page_block = $('.mag_content_item').eq(next_page);
								if (typeof page_item == 'undefined') {
									page_item = 0;
								}

								var column_constructor = current_page_block.find('.column_constructor');
								var column_width = column_constructor.innerWidth()/column_constructor.attr('data-pcolumns');
								current_page_block.css({"transform": "translate3d(-"+ (page_item*(column_width+columnGap/2)) +"px, 0px, 0px"});
							}
						}

						function highlight_index(scroll_to) {
							var hash = get_page_hash();
							if (hash == '' || hash == '#') {
								return false;
							} else {
								var hash_arr = hash.split('_');
								var page = hash_arr[1];
								var page_item = hash_arr[2];
								var page_selector = $('.mag_index_items').eq(page-1).find('.mag_index_item');
								var items_count = page_selector.attr('data-pcolumns')
								if (typeof page_item == 'undefined') {
									page_item = 0;
								} else {
									page_item = Math.round(page_item / items_count);
								}
							}
							$('.mag_index_item').removeClass('mag_index_item__highlight');
							page_selector.eq(page_item).addClass('mag_index_item__highlight');
							if (scroll_to == true) {
								var currs = $('.mag_index').scrollTop();
								$('.mag_index').animate({
									scrollTop: currs + page_selector.eq(page_item).offset().top - 35
								}, 500);
							}
						}

						function start_reading() {
							$('.mag_content_item_start').css('visibility','hidden').removeClass('__current');
							$('.new_mag_subscribe').addClass('new_mag_subscribe__active');
							$('.mag_top_menu__bottom').addClass('new_mag_subscribe__active');
							$('.nav_lists').removeClass('nav_lists__hidden');
						}

						function set_page_hash(p,n) {
							scripthash = false;

							if (n > 0) {
								window.location.hash = 'page_'+(p)+'_'+(n);
							} else if (p == 0) {
								window.location.hash = '';
							} else {
								window.location.hash = 'page_'+(p);
							}
						}
						
						function get_page_hash() {
							return window.location.hash;
						}

						function show_cover() {
							current_page = false;
							next_page = 0;
							$('.mag_content_item_start').css('visibility','visible').addClass('__current');
							$('.new_mag_subscribe').removeClass('new_mag_subscribe__active');
							$('.mag_top_menu__bottom').removeClass('new_mag_subscribe__active');
							$('.nav_lists').addClass('nav_lists__hidden');
							$('.mag_content_item').css({"transform": "translate3d(0px, 0px, 0px)","visibility":"hidden"}).removeClass('__current');
							$('.mtb_theme__live').text('');
							set_page_hash(0,0)
						}

						function resize_magazine () {
							var magazine_content_height = $('.mag_content_item').innerHeight();
							$('.slider_wrap').jScrollPane({verticalDragMinHeight: 63,verticalGutter:0, animateScroll: true});
						}
						
						$('p').hyphenate();
						resize_magazine();

						function build_magazine() {
							$('._column_line').remove();
							$('.mag_content_item').each(function() {
								$(this).find('.target').html('');
							})
							var bottom_sub_h = $('.new_mag_subscribe').innerHeight();
							$('.mag_top_menu__bottom').css({'bottom':bottom_sub_h+'px'});
							bottom_sub_h = bottom_sub_h + $('.mag_top_menu__bottom').innerHeight();
							$('.mag_content_item').each(function() {
								var content_columns = $(this).attr('data-columns')
								var cconstructor = $(this).find('.column_constructor');
								var items_in_viewport = cconstructor.size();
								var full_width = 0;
								var cnumbers = cconstructor.size();
								var curr_width = $(this).innerWidth();
								$(this).css('width','40000px')
								cconstructor.each(function(k,v) {
									var columns_number = $(this).attr('data-pcolumns');
									var viewport = $(this).find('.viewport');
									var target = $(this).find('.target');
									var flowedContent = $(this).find('.flowedContent')
									var fixedContent = $(this).find('.fixedContent')
									column_width = ($('.mag_content').innerWidth() - (content_columns - 1)*columnGap)/content_columns;
									var viewportWidth = Math.round((column_width * columns_number) + ((columns_number - 1)*columnGap));
									var viewportHeight = $('.mag_content').innerHeight() - bottom_sub_h;
									var header_height = $(this).find('.mc_header').css('width', curr_width+'px').innerHeight();
									$(this).addClass('column_constructor-'+columns_number)
									if (k+1 == cnumbers) {
										$(this).addClass('column_constructor-'+columns_number+'-last');	
									}
									var full_img = $(this).find('.full_img__big');
									header_height = header_height + 40;
									if ((viewportHeight - header_height) < 450 && (viewportHeight - header_height) > 250) {
										full_img.css('height',(viewportHeight-header_height)+'px')
									} else if ((viewportHeight - header_height) < 250) {
										full_img.css('height','0');
									}
									
									var full_img_height = full_img.innerHeight()
									var big_img = full_img.attr('data-big-img');
									var small_img = full_img.attr('data-small-img');

									if (typeof small_img != 'undefined' && full_img_height < 380) {

										full_img.css({'background-image': 'url("'+small_img+'")'})
									} else if (typeof big_img != 'undefined' && full_img_height > 380) {
										full_img.css('background-image', 'url("'+big_img+'")')
									}
									
									var cf = new FTColumnflow(target[0], viewport[0], {
										columnCount:           columns_number,
										standardiseLineHeight: true,
										pagePadding:           0,
										columnGap:       	   columnGap,
										minFixedPadding: 0,
										showGrid: false,
										columnFragmentMinHeight: 60,
										viewportWidth:  viewportWidth,
										viewportHeight: viewportHeight
									});
									cf.flow(flowedContent[0], fixedContent[0]);
									
									$(this).css({'width':(viewportWidth)+'px','height':viewportHeight+'px','float':'left','overflow':'hidden'});

									if (k > 0) {
										var this_left = $(this).position().left;
										var this_top = $(this).position().top;
										$('<div style="left:'+ (this_left-(columnGap/2)) +'px;height:'+$(this).innerHeight()+'px;top:'+ this_top +'px" class="_column_line"></div>').insertBefore(this);
									}
									full_width = full_width + $(this).outerWidth(true);
									/* FTColumnflow некорректно сдвигает текст в столбцах, если у текста есть отступы и прочие непредсказуемые вкрапления (у нас это, например, буквица), этот хак чинит данное поведение на лету. */
									var fp = $(this).find('.cf-render-area').find('.cf-column');
									fp.html('<div class="fp_hack">'+flowedContent.html()+'</div>');
									var offset = 0;
									fp.each(function(k,v) {
										$(this).find('.fp_hack').css('top','-'+offset+'px')
										offset = offset + $(this).innerHeight()
										var p = $(this).find('p');
										p.addClass('not_first_p'); // Отступ у параграфа
										$(p[0]).removeClass('not_first_p').addClass('first_p'); // Для буквицы
										$(this).prepend('<div class="__text_unselect"></div>');
										var unselect_width = $('.__text_unselect').innerWidth();
										$('.__text_unselect').css('width',unselect_width+'px').addClass('__text_unselect_absolute');
										if (!$(this).hasClass('cf-column-1')) {
											var this_left = $(this).position().left;
											var this_top = $(this).position().top;
											$('<div style="left:'+ (this_left-(columnGap/2)) +'px;height:'+$(this).innerHeight()+'px;top:'+ this_top +'px" class="_column_line"></div>').insertBefore(this);
										}
									})

									var fu = $(this).find('.cf-render-area').find('.cf-page');
									var last_txt = $(fu[0]).find('.__text_unselect');
									var read_all = $(this).find('.finalize_reading__item');
									var graps_data = $(this).find('.column_graps');
									read_all.clone().show().appendTo(last_txt.last())
									graps_data.clone().show().appendTo(last_txt.last())
								})
							$(this).css('width',full_width+'px');
							})
						$('.main_preloader').hide();
						}
						$.ajax({
							method: "POST",
							url: "/check_issaccess/40/"
						}).done(function( data ) {
							if (data.resp == true) { //Есть доступ
								$('.hide_onacess').css('height','0').hide()
								$('.read_text').text('Читать номер')
								$('.show_onacess').show()
							}
							build_magazine();
							get_page();
						});
						$(window).load(function() {
							setTimeout(function(){
								$(window).on('popstate', function(event) {
									if (scripthash == false) {
										get_page();
									}
									scripthash = false;
								});
							},10)
						})
						$(window).resize(function() {
							build_magazine();
							resize_magazine();
							get_page();
						})
					})
				</script>
		</div>
	<div class="mag_top_menu mag_top_menu__bottom">
		<div class="navigation_and_icons">
			<div class="nav_lists nav_lists__hidden">
				<span class="lists_pages prev_list">
					Предыдущая страница
				</span>
				<span class="lists_pages next_list">
					Следующая страница
				</span>
			</div>
		</div>
	</div>
	<div class="new_mag_subscribe hide_onacess" style="text-align:center">
		<a href="http://expert.ru/subscribe/"><img src="http://expert.ru/data/public/503262/503296/full-acess.png" style="max-width:100%"/></a>
	</div>
	</div>
</div>
</body>

<script>
  $(function(){
    // uparrow
    var neededPart;
  
    function defineNeedePart() {
      neededPart  = $('html').height()/4;
    };
  
    function ifShowArrow() {
      var scrolled = $(window).scrollTop();
      if (scrolled >= neededPart) {$('.uparrow').fadeIn(200);}
      else {$('.uparrow').fadeOut(200);}
    };
  
    function scrollToTop() {
      $('html, body').animate({scrollTop:0}, 400);
    };
  
    defineNeedePart();
  
    $(window).scroll(function(){
      ifShowArrow();
    });
  
    $(window).resize(function(){
      defineNeedePart();
    });
  
    $('.uparrow').on('click', function(){scrollToTop()});
  
  });
</script>

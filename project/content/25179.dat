			var b = document.body;
			var bodyCss;

			// fix onload
			$(function(){
				setTimeout(function() {

					if (!$bodybg.parent().is($body)) {
						$body.prepend($bodybg).prepend($('.nks_cc_trigger_tabs')).prepend($('#ncf_sidebar')).append($('#ncf-overlay-wrapper'));
					}


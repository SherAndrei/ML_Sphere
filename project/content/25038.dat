/**
 * Parameters:
	 header
	 text
	 ok_text
	 ok_callback
	 cancel_text
	 cancel_callback
 */
function messageBox(args)
{
	if (typeof(args) == "string") {
		  messageBox({header: args, ok_text: "Закрыть"});
		  return;
	}
	var msgbox = $("#header_message_box");
	msgbox.find("#header_message_box_cancel").off("click");
    msgbox.find("#header_message_box_ok").off("click");
	
	if ((args.header || "") == "") {
		msgbox.find("#header_message_box_header").hide();
	} else {
		msgbox.find("#header_message_box_header").text("" + args.header);
		msgbox.find("#header_message_box_header").show();
	}
    if ((args.text || "") == "") {
    	msgbox.find("#header_message_box_body").hide();
    } else {
    	var txt = (args.text || "");
    	txt = txt.replace("<", "&lt;").replace("\n", "<br/>");
        //alert(txt.indexOf("\n"));
    	msgbox.find("#header_message_box_body").html(txt);
    	msgbox.find("#header_message_box_body").show();
    }
    if (args.ok_text == "") {
        msgbox.find("#header_message_box_ok").hide();
    } else {
        msgbox.find("#header_message_box_ok").text("" + args.ok_text || "Закрыть");
        msgbox.find("#header_message_box_ok").show();
    }
    if ((args.cancel_text || "") == "") {
    	msgbox.find("#header_message_box_cancel").hide();
    } else {
    	msgbox.find("#header_message_box_cancel").text("" + args.cancel_text);
    	msgbox.find("#header_message_box_cancel").show();
    }
    //msgbox.find("#header_message_box_ok").text(args.ok_text || "Закрыть");
    msgbox.find("button#header_message_box_cancel").on("click", function() {
    	hidePopup();
    	msgbox.find("#header_message_box_cancel").off("click");
    	msgbox.find("#header_message_box_ok").off("click");
    	if (typeof(args.cancel_callback) == "function") {
    		args.cancel_callback();
    	} else if (typeof(args.cancel_callback) == "string") {
    		window.location.href = args.cancel_callback;
    	}
    });
    
    msgbox.find("button#header_message_box_ok").on("click", function() {
        hidePopup();
        msgbox.find("#header_message_box_cancel").off("click");
        msgbox.find("#header_message_box_ok").off("click");
        if (typeof(args.ok_callback) == "function") {
            args.ok_callback();
        } else if (typeof(args.ok_callback) == "string") {
            window.location.href = args.ok_callback;
        }
    });
    
    displayPopup("header_message_box");
}


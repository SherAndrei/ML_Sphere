    <script type="text/javascript">

        var pictures = [];
        $(function () {
            $('.article__content img').each(function (i, e) {
                var img = $(e);
                var scr = img.attr('scr');
                for (i in pictures) {
                    if (pictures[i].url == img.attr('src') || pictures[i].url_save == img.attr('src')) {
                        if (pictures[i].width < 160 || pictures[i].height < 50) {
                            img = null;
                        }
                        break;
                    }
                }
                if (img) {
                    if ((img.parent()).is('a')) {
                        img.parent().removeAttr('href');
                    }
                    if (img.attr('style')) {
                        img.removeAttr('style');
                    }
                    var h = img.attrData('h') ? img.attrData('h') : img.height();
                    var w = img.attrData('w') ? img.attrData('w') : img.width();
                    if (w >= 160) {
                        if (w > 610) {
                            h = h * 610 / w;
                            w = 610;
                        }

                        $(e).css({'width': w, 'height': h ? h : 'auto'})
                                .wrap('<div class="article__slider">')
                                .wrap('<a class="imgFullScreen" data-target=".galleryModal" data-toggle="modal"></a>')
                                .parent()
                                .parent().css({'width': w, 'height': h ? h : 'auto'})
                                .append('<div class="background"></div>')
                                .append($('#imgBottomTemplate').tmpl({
                                    news_id: '58ecd46b40d9de7dff228eab',
                                    src: img.attr('src')
                                }));
                    }
                }
            });
        });
    </script>

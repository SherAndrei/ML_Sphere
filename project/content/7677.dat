				if (w > h) {
					h = h*(size/w);
					w = size;
				} else {
					w = w*(size/h);
					h = size;
				}
				$(this).width(w);
				$(this).height(h);
			}
		});
		$('.postimage').not('a .postimage').each(function() {
			var src = $(this).attr('src');
			$(this).attr('src', '');
			$(this).attr('src', src);
		});
		$('a.img-link').each(function() { // External Links Fix
			$(this).attr("onclick", "return hs.expand(this)");
			this.href = this.href.replace('http://medvezhijugol.ru/url.php?', '');

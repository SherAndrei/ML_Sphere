      if($(this).hasClass("collapsed")){
        $(this).removeClass("collapsed");
        $(this).addClass("normal");
        $("#contents").show();
      } else {
        $(this).removeClass("normal");
        $(this).addClass("collapsed");
        $("#contents").hide();
      }
    });
    $(".contents_title.collapsed").click(function(){
    });
  });

  

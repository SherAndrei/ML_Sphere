<script>
	$(window).load(function() {
		var floatDiv = $('#sidebar')
		var coords = floatDiv.offset();
		var W = floatDiv.width()
		var H = floatDiv.height()
		
		var variant = $(window).height() - H - coords.top > 0 ? 1 : 2;
		
		
		$(window).scroll(function() {
		
			if (variant == 1) {
				var scrollTop = $(window).scrollTop();
				if (scrollTop > coords.top && floatDiv.css('position') == 'static') {
					floatDiv.css({position:'fixed',top:'5px', left:0, width: W+'px'});
				}
				if (scrollTop < coords.top && floatDiv.css('position') == 'fixed') {
					floatDiv.css({position:'static',top:'auto', left:'auto'});
				}
			} else if (variant == 2) {
				var scrollTop = $(window).scrollTop();
				var bottom = $(window).height() - H - coords.top + scrollTop
				if (bottom >= 0) {
					if ($(document).height() - scrollTop - $(window).height() < $('#footer-container').height()) {
						var cssbottom = $('#footer-container').height() - ($(document).height() - scrollTop - $(window).height())
					} else {
						var cssbottom = 5
					}
					floatDiv.css({position:'fixed',bottom:cssbottom+'px', left:0+'px', width: W+'px'});
				} else {
					floatDiv.css({position:'static',top:'auto', left:'auto'});
				}
			}
		});
	})
</script>


			else if (elem.detachEvent)
				elem.detachEvent("on" + type, elem.handle);
			delete elem.events[type];
			for (var any in elem.events) return;
			try {
				delete elem.handle;
				delete elem.events;
			} catch(e) { // IE
				elem.removeAttribute("handle");

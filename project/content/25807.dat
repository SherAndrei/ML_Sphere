                if (selectedString && typeof(selectedString) != 'undefined' && quotedMessage) {
                    parentObj = range.commonAncestorContainer;
                    if (isIE) {
                        if (quotedMessage.replace(selectedString, '') != quotedMessage) {
                            quotedMessage = selectedString;
                        } else {

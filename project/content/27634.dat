 }
function show(what){
 document.getElementById(what).style.zIndex='0';
 if(document.getElementById(what).filters){
      document.getElementById(what).filters.item(0).Apply();
      document.getElementById(what).style.visibility='visible';
      document.getElementById(what).filters.item(0).Play();
      } 
 else {
      flag=true;
      document.getElementById(what).style.visibility='visible';
      up(0,what);
      }
 }
function down(how,pic){
 now=how;
 document.getElementById(pic).style.opacity=now--/100;
 nik=pic;
 if(!flag&&(now>-1)) window.setTimeout('down(now,nik)', 17);
 }
function hide(what){
 temp=what;
 if(document.getElementById(what).filters){
      document.getElementById(what).filters.item(0).Apply();
      document.getElementById(what).style.visibility='hidden';
      document.getElementById(what).filters.item(0).Play();
      } 
 else {
      flag=false;
      down(99,what);
      window.setTimeout('if(!flag) document.getElementById(temp).style.visibility="hidden"', 2000);
      } 
 window.setTimeout('if(document.getElementById(temp).style.visibility=="hidden") document.getElementById(temp).style.zIndex=-1', 2000);
 }
function pocus(what){
 temp=what;
 show(what);
 window.setTimeout('hide(temp)', 13000);
 }

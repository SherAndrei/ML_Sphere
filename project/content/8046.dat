<script>
function rateth(id,r,tbl){
	var s=readCookie('rates');
	var s2='';
	if(s!=null){
		a=s.match(/([0-9]{1,})/g);
		var si=0;
		var l=a.length;
		if(l>50)si=1;
		for(var i=si;i<l;i++){
			if(a[i]==id)return;
			s2=s2+a[i]+'_';
		}
	}
	try {if(xh!=null){xh.onreadystatechange=null;xh.abort;xh.close;}}catch(err){}
	xh=GetXmlHttpObject();
	if (xh==null)return;
	var url="/ratethis.php?id="+id+'&tbl='+tbl+'&r='+r;
	xh.open("POST",url,true);
	xh.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
	xh.onreadystatechange=sch;
	xh.send('');
	s2=s2+id+'_';
	setCookie('rates',s2,1);	
}
function sch()
{
	if (xh.readyState==4){
		if(xh.responseText!='0'){
	  		a=xh.responseText.match(/([0-9]{1,});([0-9-]{1,});/);
			o=document.getElementById('sp'+a[1]);
			if(o!=null)o.innerHTML=a[2];
		}
	}
}
function GetXmlHttpObject(){
if (window.XMLHttpRequest)return new XMLHttpRequest();
if (window.ActiveXObject)return new ActiveXObject("Microsoft.XMLHTTP");
return null;
}
function readCookie(name) {
	var nameEQ = name + "=";
	var ca = document.cookie.split(';');
	for(var i=0;i < ca.length;i++) {
		var c = ca[i];
		while (c.charAt(0)==' ') c = c.substring(1,c.length);
		if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
	}
	return null;
}
function setCookie(c_name,value,exdays)
{
	var exdate=new Date();
	exdate.setDate(exdate.getDate() + exdays);
	var c_value=escape(value) + ((exdays==null) ? "" : "; expires="+exdate.toUTCString());
	document.cookie=c_name + "=" + c_value;
}

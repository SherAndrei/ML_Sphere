    <a href="#" onclick="new Ajax.Request('/news/ofitsioz/posts/udar-po-saentologam/comments/new?parent_id=17969', {asynchronous:true, evalScripts:true, method:'get', parameters:'authenticity_token=' + encodeURIComponent('cb5bb5390092d5d8a0c39f35d89c598b9aaaaf1f')}); return false;">Ответить</a>


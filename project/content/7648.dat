            {
                if(is_bottom())
                    $( "#book_readed" ).css({'font-weight': 'bold','color': 'green'});
                else
                    $( "#book_readed" ).css({'font-weight': 'normal','color': 'blue'});
            }

            if(is_top())
            {
                $("#description").show();
            }
        });

        $( "#fixed-div" ).hover(
                function(){
                    $("#description").show();
                    can_hide=false;
                },
                function(){
                    if( (!is_bottom()) && (!is_top()))
                        $("#description").hide();
                    can_hide=true;
                }
        ); 


            $('html, body').animate({
                scrollTop: lnk.offset().top
            });
        }

        if( (!is_bottom()) && (!is_top()) ) $("#description").hide();

        $(window).scroll(function(){
            if(can_hide) $("#description").hide();

            /*if(is_bottom())
            {
                $("#description").show();
            }*/

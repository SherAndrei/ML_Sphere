<script type="text/javascript">
    $(function() {
        footerBannerPositioning();
        $(window).resize(footerBannerPositioning);

        setTimeout(addStatisticRow, 8000);

        // Статистика скачивания файлов
        if ($('.aplayer .aplayer-pause').hasClass('aplayer-autoplay-start')) {
            var $playBtn = $('.aplayer .aplayer-pause.aplayer-autoplay-start');
            aplayerPressPlay($playBtn);
        }

        $('.aplayer .aplayer-play').on("click", function () {
            var $playBtn = $(this);
            aplayerPressPlay($playBtn);
        });

        $(".aplayer .aplayer-download").on("click", function () {
            var fileUrl = $(this).attr("href");
            addStatisticDownloadRow(fileUrl);
        });

        $('.js-change-location').on('click', function(e) {
            e.preventDefault();
            var newLocation = $(this).data('location') || '';

            if (newLocation)
                window.location = newLocation;
        });

        $('.ads_container_wrapper').attr("style", "display: block!important");
    });

    function footerBannerPositioning() {
        if ($(window).width() > 960) {
            $('.footer-banner').css({marginLeft: (($(window).width() - 960) / 2) + 'px'});
        }
        else {
            $('.footer-banner').css({marginLeft: 0});
        }
    }

    function addStatisticRow() {

        var sfdata = {};
        sfdata.url = window.location.href;
                sfdata.iplist = "217.69.133.23, 217.69.133.23, 127.0.0.1";
                sfdata.referer = document.referrer;
		sfdata.agent = navigator.userAgent;

        $.ajax({
            url: '/ajaxstat/setstat',
            type: 'POST',
            data: sfdata,
            success: function(msg) {
                console.log(msg);
            }
        });
    }

    function aplayerPressPlay($playBtn) {
        var fileUrl = $playBtn.closest('.aplayer').find('.aplayer-download').attr("href");

        if (!$playBtn.hasClass('aplayer-play-pushed')) {
            $playBtn.addClass('aplayer-play-pushed');
            addStatisticDownloadRow(fileUrl);
        }
    }

    function addStatisticDownloadRow(fileUrl) {
        var dfdata = {};
        dfdata.url = window.location.href;
        dfdata.file = fileUrl;

        $.ajax({
            url: "https://regnum.ru/ajaxstat/downloadstat.html",
            type: 'POST',
            data: dfdata,
            success: function(msg) {
                console.log(msg);
            }
        });

        // отметка о прослушивании подкаста
        Cookies.set('reg_pp', fileUrl, { expires: 1, domain: 'regnum.ru' });
    }
</script>



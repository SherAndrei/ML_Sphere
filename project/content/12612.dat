$(function() {
	section_hash();
	$(window).bind('hashchange', section_hash);
});
function section_hash() {
	var hash = window.location.hash;
	hash = hash.substring(1);
	if ($('a[name=\'' + hash + '\']').length) {
		return;
	}
	if (hash && /^[0-9_]+$/.test(hash)) {
		var indexes = hash.split('_');
		var start = [];
		$('.text a[name]').each(function() {
			name = $(this).attr('name');
			if (/^[0-9_]+$/.test(name)) {
				name_idexes = name.split('_');
				for (var i = start.length; i < name_idexes.length; i++) {
					start[i] = name_idexes[i];
				}
				if (indexes.length == name_idexes.length) {
					return false;
				}
			}
		});
		for (var i in start) {
			indexes[i] = parseInt(indexes[i]) + parseInt(start[i]) - 1;
		}
		var link = indexes.join('_');
		var aTag = $('a[name=\'' + link + '\']');
		$('html,body').animate({scrollTop: aTag.offset().top}, 0);
	}
}
$(function() {
	$('a').each(function() {
		$href = $(this).attr('href');
		if ($href && $href.charAt(0) == '#') {
			$name = $(this).attr('name');
			$title = $(this).attr('title');
			if (!$title && $name && $name.search('return') != -1) {
				note = $('[name="' + $href.substr(1) + '"]');
				if (note.length == 2)
					note = note.last().parent();
				else
					note = note.last().next();
				if (note.prop('tagName') != 'DIV') return;
				$text = note.html();
				$t = $('<div/>').html($text);
				$t.find('a').remove();
				$title = $t.text();
				$(this).attr('title', $.trim($title));
			}
			$href = window.location.href.match(/(^[^#]*)/)[0] + $href;
			$(this).attr('href', $href);
		}
	});
});
</script>


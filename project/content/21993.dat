     <tr style="border:inherit">
      <td style="padding: 0.00pt 2.16pt;background-color:#ffffff;color:#000000;border:0.00pt solid #000000">
       <p class="_(web)" awml:style="РћР±С‹С‡РЅС‹Р№ (Web)" dir="ltr" style="text-align:center;margin-bottom:5pt;margin-top:5pt;text-indent:0.3937in"><span style="font-weight:bold;font-size:14pt;font-family:'Times New Roman'" xml:lang="en-US" lang="en-US">ACTIVITY</span></p>
      </td>
      <td style="padding: 0.00pt 2.16pt;background-color:#ffffff;color:#000000;border:0.00pt solid #000000">
       <p class="_(web)" awml:style="РћР±С‹С‡РЅС‹Р№ (Web)" dir="ltr" style="text-align:center;margin-bottom:5pt;margin-top:5pt;text-indent:0.3937in"><span style="font-size:14pt;font-family:'Times New Roman'" xml:lang="en-US" lang="en-US">EMPLOYING</span></p>
       <p class="_(web)" awml:style="РћР±С‹С‡РЅС‹Р№ (Web)" dir="ltr" style="text-align:center;margin-bottom:5pt;margin-top:5pt;text-indent:0.3937in"><span style="font-size:14pt;font-family:'Times New Roman'" xml:lang="en-US" lang="en-US">TRAINING</span></p>

	title_div.style.top=parseInt(dmainpict.style.top)+parseInt(dmainpict.style.height)+10+"px";;	

	title_div.style.visibility='visible';

}

// Показать фото на сером фоне из массива с переходом
// Массив фото, номер текущего
function f_show_pict_arr(big_arr,npict,next_call){

// Если не задано, то 0, т.е. вызов не след. или пред., нужно очистить картинку
	next_call=next_call || 0;
	
	if(!next_call){pict1.src="";} // Если вызов не из ф-ции смены картиники, удалить старое изображение

	
	pict=big_arr[npict][0];
	wpict=big_arr[npict][2];
	hpict=big_arr[npict][3];
	title=big_arr[npict][1];	
	
// Кол-во фото (элементов массива)
	count=big_arr.length;

// Фиксируем глобально номер текущего фото pnum
	pnum=npict;
	
// Ширина и высота рабочего окна
	w_main=document.documentElement.clientWidth;
	h_main=document.documentElement.clientHeight;
	
	wpict2=wpict; hpict2=hpict;

// Фиксируем размеры исходной картинки для представления в полном размере
	w_full=wpict; h_full=hpict;
	
	
// Если Ширина картинки больше 0.9 ширины окна, уменьшить размеры до 0.9 ширины	
	if(wpict>(0.9*w_main)){
		wpict2=0.9*w_main;
		hpict2=hpict*wpict2/wpict;
//		alert("Уменьшена ширина");
	}

// Если Высота картинки больше 0.9 высоты окна, уменьшить размеры до 0.9 высоты		
	if(hpict2>(0.9*h_main)){
		wpict2=wpict2*0.9*h_main/hpict2;
		hpict2=0.9*h_main;
//		alert("Уменьшена высота");		
	}
	

// Здесь было Положение и размер слоя с картинкой	

	dmainpict.style.left=(w_main-wpict2)/2+"px";
	dmainpict.style.top=(h_main-hpict2)/2+"px";
	
	dmainpict.style.width=wpict2+"px";
	dmainpict.style.height=hpict2+"px";
	
// Размер картинки равен размеру слоя, т.е. картинка вписана в слой
// pict1 - глобальная
	pict1.width=wpict2;
	pict1.height=hpict2;
	

// На время загрузки курсоры - в режим ожидания. Обратно - ф-ция f_norm_cursor в onLoad pict1
	pict1.style.cursor='wait';
	lt_pic.style.cursor='wait';
	rt_pic.style.cursor='wait';
	d_div.style.cursor='wait';		

// Присваиваем значение картинке
	pict1.src=pict;
	pict1.title=title;	

// Показать тень, слой картинки, отменить прокрутку слоя с картинкой
	d_div.style.visibility='visible';

    dmainpict.style.overflow='hidden';
	dmainpict.style.visibility='visible';		
	
	
// Если картинка больше слоя, то показываем пиктограмму для увеличения картинки
	if(wpict!=wpict2){
	b_div.style.left=parseInt (dmainpict.style.left)+wpict2-115+"px";
	b_div.style.top=parseInt (dmainpict.style.top)+5+"px";
	p_big.src="/graph/up.png";
	b_div.style.visibility='visible';
	}

// Показать пиктограмму для закрывания картинки
	cl_div.style.left=parseInt (dmainpict.style.left)+wpict2-60+"px";
	cl_div.style.top=parseInt (dmainpict.style.top)+5+"px";;
	cl_div.style.visibility='visible';

// Показать пиктограмму для стрелки вправо
	if(npict<count-1){

	rt_div.style.left=parseInt (dmainpict.style.left)+wpict2+10+"px";
//	rt_div.style.left=parseInt (dmainpict.style.left)+wpict2-40+"px";

	rt_div.style.top=parseInt (dmainpict.style.top)+hpict2/2+"px";;
	rt_div.style.visibility='visible';
	}

// Показать пиктограмму для стрелки влево если не первое фото или на первой позиции не заголовок
	if(npict!=0 && !(npict==1 && big_arr[pnum-1][0].indexOf("*")!=-1 ) && !(npict==1 && big_arr[pnum-1][0].indexOf(".")!=-1 )){

	lt_div.style.left=parseInt (dmainpict.style.left)-lt_pic.width-6+"px";
//	lt_div.style.left=parseInt (dmainpict.style.left)+6+"px";

	lt_div.style.top=parseInt (dmainpict.style.top)+hpict2/2+"px";;
	lt_div.style.visibility='visible';
	}

// Показать Подпись к фото
	pic_title.value=big_arr[npict][1];

	title_div.style.left=parseInt (dmainpict.style.left)+wpict2/2-250+"px";
//	title_div.style.top=parseInt (dmainpict.style.top)-30+"px";;
	title_div.style.top=parseInt(dmainpict.style.top)+parseInt(dmainpict.style.height)+10+"px";;	

	title_div.style.visibility='visible';

}

function f_change_pict(pict){
	pnum=pnum+1;
	if(pnum>3){pnum=0;}
	pict.src=mpict[pnum];
	
	dmainpict.style.visibility='hidden';

}

// Следующая картинка
function f_next_pict(big_arr){
// big_arr - массив фото. pnum - глобальная, тек. номер фото

// Если pnum=-1, т.е. вызов был не из массива, т.е. ф-цией f_show_pict_dark	
	if(pnum==-1){f_hide_pict();return;}


// Кол-во элементов массива фото
	n_foto=big_arr.length;

	if(pnum<n_foto-1)
	pnum=pnum+1;

// если имя содержит "*" и ещё не конец массива, то перейти на следующую строку
	while(big_arr[pnum][0].indexOf("*")!=-1 && pnum<n_foto-1){
	pnum++;
	}
	
// если имя пустое, то перейти на следующую строку
	while(big_arr[pnum][0].length=0 && pnum<n_foto-1){
	pnum++;
	}

// если имя содержит "*" и уже конец массива, то перейти на предыдущую строку
	while(big_arr[pnum][0].indexOf("*")!=-1 && pnum==n_foto-1){
	pnum--;
// Пиктограмму вправо убрать
	rt_div.style.visibility='hidden';			
	}

// Скрывать пиктограммы для обновления...
	f_hide_pict(1);
	
	f_show_pict_arr(big_arr,pnum,1);

}

// Предыдущая картинка
function f_pred_pict(big_arr){
// big_arr - массив фото. pnum - глобальная, тек. номер фото

// Кол-во элементов массива фото
	n_foto=big_arr.length;

	if(pnum>0)
	pnum--;

// если имя содержит "*" и ещё не начало массива, то перейти на предыдущую строку
	while(big_arr[pnum][0].indexOf("*")!=-1 && pnum>0){
	pnum--;
	}
	
// если имя пустое и ещё не начало массива, то перейти на предыдущую строку
	while(big_arr[pnum][0].length=0 && pnum>0){
	pnum--;
	}

// если имя содержит "*" и уже начало массива, то перейти на предыдущую строку
	while(big_arr[pnum][0].indexOf("*")!=-1 && pnum==0){
	pnum++;
	}

// Скрывать пиктограммы для обновления...
	f_hide_pict(1);
	
// 1 - значит, вызов следующей или предыдущей, чтобы не очищать изображение
	f_show_pict_arr(big_arr,pnum,1);

}


// Скрытие изображения
function f_hide_pict(cl_all){
	
// Если не задано, то 2, т.е. гасить всё, иначе гасить только пиктограммы
	cl_all=cl_all || 2;
	
// Для скрытия предыдущего изображения. Надо ли?
//	pict1.src="";
	
	if(cl_all==2){
	dmainpict.style.visibility='hidden';

// Слой серый на всё окно
	if (document.getElementById('d_div')){
	d_div.style.visibility='hidden';}

// Слой тень вокруг фото
	if (document.getElementById('sh_div')){
	sh_div.style.visibility='hidden';}
	}

// Пиктограмма увеличения
	b_div.style.visibility='hidden';		

// Пиктограмма закрытия
	cl_div.style.visibility='hidden';		

// Пиктограмма вправо
	rt_div.style.visibility='hidden';		

// Пиктограмма влево
	lt_div.style.visibility='hidden';		

// Подпись к фото
	title_div.style.visibility='hidden';		

}

// Растягивание фото до реального размера и сжатие в окно
function f_norm_pict(wpict,hpict){
	
	if(dmainpict.style.overflow=="hidden"){
	pict1.width=wpict;
	pict1.height=hpict;	
    p_big.src="/graph/dn.png";
	dmainpict.style.overflow="scroll";
	p_big.title="Сжать фото";
	}
	else{
	pict1.width=parseInt(dmainpict.style.width);

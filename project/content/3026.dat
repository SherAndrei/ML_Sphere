<script>
var vk_user;
function submitMe(e) {
	var e = e?e:window.event; 
	if(e.keyCode==13) {$('#loginForm').submit();}
}

function checkLogin() {
	var login = $('#RNLogin').val();
	if(login.length != 0) {
		$.post('/actions/checklogin', {login:login}, function (data) {
			if(data != 'OK') {
				$('#ErrorReg').html('Такой логин уже занят.');
				$('#ErrorReg').show();
			} else {
				$('#ErrorReg').hide();
			}
		});
	}
}

function checkLogin_MRU() {
	var login = $('#RNLogin_MRU').val();
	if(login.length != 0) {
		$.post('/actions/checklogin', {login:login}, function (data) {
			if(data != 'OK') {
				$('#ErrorReg_MRU').html('Такой логин уже занят.');
				$('#ErrorReg_MRU').show();
			} else {
				$('#ErrorReg_MRU').hide();
			}
		});
	}
}

function doLogin() {

	VK.Auth.login(
    function (response) {
		if(response.session) {
			var s = String.fromCharCode(115, 101, 120);
			VK.Api.call('getProfiles', {
				uids: response.session.mid,					
				fields: "first_name,last_name,nickname," + s + ",birthdate"
			}, function(r) {
				var response = r.response;
				  //проверка, есть ли уже на решете пользователь с vk_id
				  vk_user = response[0];
				  $.post('/actions/getvkuser', response[0], function (html) {
					  var login = eval('('+html+')');
					  if(login.status=='OK') {
						  window.location = '/';
					  } else {
						  //обновим вопрос:
						  $('#Question').hide();$.post('/actions/getkeycode', null, function(data) {$('#Question').html(data); $('#Question').show();});
						  //покажем формочку:
						  $('#vk_my_auth').show();						  
					  }
				  });
			});
		} else {
		   //пользователь не авторизовался
		}
	}
);
}

function doLastLogin() {
	if(vk_user) {
		if($('#ARegistered').attr('checked')) {
			$.post('/actions/checkuser', {login:$('#RLogin').val(), password:$('#RPassword').val(), vk_id:vk_user.uid}, function (html) {
				var response = eval('('+html+')');
				if(response.exists) {					
					window.location = '/';
				} else {
					$('#ErrorReg').html('Пользователя с таким логином и паролем не существует!');
					$('#ErrorReg').show();
				}
			});
		}
		if($('#NotRegistered').attr('checked')) {
			var email = $('#REmail').val();
			var mailRegex = /[-0-9a-z_]+@[-0-9a-z_^\.]+\.[a-z]{2,3}/;
			var login = $('#RNLogin').val();

			if(login.length==0) {
				$('#ErrorReg').html('Необходимо ввести свой логин!');
				$('#ErrorReg').show();
				return;
			} 
			if(mailRegex.test(email)) {
				var data = new Object;
				
				var s = String.fromCharCode(115, 101, 120);
				
				data.vk_id = vk_user.uid;
				data.firstname = vk_user.first_name;
				data.lastname = vk_user.last_name;
				data.midname = vk_user.nickname;
				data.birthday = vk_user.bdate;
				data[s] = vk_user[s];
				data.email = $('#REmail').val();
				data.login = $('#RNLogin').val();
				data.captcha = $('#RCaptcha').val();
				
				
				$.post('/actions/vkregister',data, function(html) {
					var response = eval('('+html+')');
					if(response.status=='OK') {
						//alert("Вы успешно зарегистрированы. Пройдите по ссылке, присланой вам на e-mail, чтоб активировать аккаунт.");
						$('#vk_my_auth').hide();
						alert("Вы успешно зарегистрированы!\nНа указанный почтовый ящик уже выслано письмо с вашим логином и паролем, а сейчас вы будете перенаправлены на личную страничку.");
						window.location = '/actions/registration?key='+response.key;
					} else {
						
						$('#ErrorReg').html(response.message);
						$('#ErrorReg').show();
					}
				}); 
			} else {
				$('#ErrorReg').html('Неверный формат e-mail;!');
				$('#ErrorReg').show();
			}
		}
	}
}
function doLastLogin_MRU() {
	$.post('/actions/mailruregister', {login:$('#RNLogin_MRU').val()}, function (html) {
		var R = eval('('+html + ')');
		if(R.ERROR) {
			alert(R.message);
		} 
		if(R.OK) {
			window.location = '/actions/registration?key='+R.key;
		}
	});
}

function connectMailruToResheto() {
	var inputs = $('#LoginPass input[type="text"]');
	$.post('/actions/mailruregister', {connect:1, login:inputs.eq(0).val(), password: inputs.eq(1).val()}, function (html) {
		var resp = eval('('+html + ')');
		if(resp.ERROR) {
			alert(resp.message);
		} 
		if(resp.OK) {
			alert("Авторизация прошла успешно. Теперь Вы можете заходить на сайт, используя кнопку \"Войти с @mail.ru\"!");
			window.location = '/';
		}
	});
}
	

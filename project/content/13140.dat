<script>
function DisplayColumn(className, display, width)
{
    var oNodes = document.getElementById('parallel').childNodes;            
    for(var i = 0; i < oNodes.length; i++)
    {       
        var element = oNodes[i];
        if (element.className != className)
            continue;                    
        
        element.style.display = display;
        element.style.width = width;                
    }
    return true;            
}
function ShowDiv(id)
{
	var elt1 = document.getElementById(id);            
	if (document.all&&document.getElementById) {
	elt1.style.display = 'block';
	} else {
	elt1.style.display = 'table';
	}
}

function HideDiv(id)
{
	var elt2 = document.getElementById(id);            
	elt2.style.display = 'none';
}

function ToggleDiv(id)
{
	var elt = document.getElementById(id);            
	if (elt.style.display == 'none') {
	elt.style.display = 'block';
	} else { elt.style.display = 'none';}
}
function ShowOriginal()
{
DisplayColumn('original', 'block', '100%');
